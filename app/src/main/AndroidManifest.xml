        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.cadastrar.CadastroUsuario"
                  android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.editar.EditarUsuario"
            android:label="@string/title_activity_editar_usuario"
            android:screenOrientation="portrait">
        </activity>


        <activity android:name=".activity.TesteActivity"
                  android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.UsuarioActivity"
            android:label=""
            android:screenOrientation="portrait">
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name=".activity.EventoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".adapter.EventoAdapter"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.QrCodeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.VendaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.IngressoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.QrCreator"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.IngressoUsuarioActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ActivityShareIngresso"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SelecionarUsuarioShareActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.EmpresaEventoActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>