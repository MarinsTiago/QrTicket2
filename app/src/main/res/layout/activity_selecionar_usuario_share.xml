<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marin.qrticket.activity.SelecionarUsuarioShareActivity"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/logo"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Informe o email que serÃ¡ compartilhado o ingresso"
        android:layout_marginTop="20dp"
        android:textSize="17dp"
        android:textColor="@color/botao"
        />


    <EditText
        android:id="@+id/edtEmailShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:hint="email..."
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/botao"
        android:drawableTop="@drawable/sharewhite"
        android:text="Compartilhar"
        android:textColor="@color/cad"
         />

</LinearLayout>
