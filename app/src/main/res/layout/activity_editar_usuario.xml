<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context="com.example.marin.qrticket.activity.editar.EditarUsuario">

    <EditText
        android:id="@+id/edtAtUsuarioNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome..."
        android:layout_marginTop="50dp"

        />

    <EditText
        android:id="@+id/edtAtUsuarioLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="login..."
        android:layout_marginTop="50dp"
        />


    <EditText
        android:id="@+id/edtAtUsuarioSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="senha..."
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btnAtUsuario"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar informações"
        android:layout_marginTop="50dp"

        />

</LinearLayout>
